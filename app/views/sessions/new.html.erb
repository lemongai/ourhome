<div class="text-center">
  <h1>ログイン</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(url: login_path, scope: :session) do |f| %>

      <div class="mb-3">
        <%= f.label :room, '部屋番号' %>
        <%= f.number_field :room, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit 'ログイン', class: 'btn btn-primary w-100' %>
    <% end %>

    <p>ユーザ登録がまだの方はこちら <%= link_to '新規登録', signup_path %></p>
  </div>
</div>