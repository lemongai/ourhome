<div class="row">
<aside class="col-sm-4">
  <%= render 'layouts/menu' %>
</aside>
  <div class="col-sm-4">
    <div class="card">
      <div class="card-header">
        マイ投稿
      </div>
      <div class="card-body">
        <%= form_with(model: @post) do |f| %>
        <div class="mb-1">
          <%= f.text_area :content, class: 'form-control', rows: 3 %>
        </div>
        <div class="mb-3 border-bottom">
          <%= f.submit '投稿する', class: 'btn btn-primary btn-sm mb-1' %>
          <% end %>
        </div>
        <div>
          <%= render 'posts/posts_homes', posts: @posts %>
        </div>
      </div>
    </div>
  </div>    
  <div class="col-sm-4">
    <div class="card">
      <div class="card-header">
        管理室より（最新５件）
      </div>
      <div class="card-body">
        <%= render 'notices/notices_homes', notices: @notices %>
      </div>
    </div>
  </div>

</div>
