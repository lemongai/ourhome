<% if notices.any? %>
  <ul class="list-unstyled mt-2">
    <% notices.each do |notice| %>
      <li class="d-flex">
        <div>
          <div>
            <span class="text-muted"> <%= notice.created_at.to_s(:datetime_jp) %></span>
          </div>
          <div>
            <p><%= notice.content %></p>
          </div>
          <div>
            <% if current_user.admin == true %>
              <% if action_name != "edit" %>
                <%= link_to '編集する', edit_notice_path(notice) %>
              <% end %>
              <%= link_to "削除する", notice, method: :delete, data: { confirm: "本当に削除しますか？" } %>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>